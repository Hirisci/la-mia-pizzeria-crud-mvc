@model PizzaCategory

<div>
    <form class="mt-4" method="Post" asp-action="Edit" asp-route-id="@Model.Pizza.Id">
        <div class="mb-3">
            <label asp-for="Pizza.Name" class="form-label">Nome</label>
            <input asp-for="Pizza.Name" class="form-control">
            <span asp-validation-for="Pizza.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Pizza.Amount" class="form-label">Prezzo</label>
            <input asp-for="Pizza.Amount" class="form-control">
            <span asp-validation-for="Pizza.Amount" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Pizza.Img" class="form-label">Immagine(url)</label>
            <input asp-for="Pizza.Img" class="form-control">
            <span asp-validation-for="Pizza.Img" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <label asp-for="Pizza.Descrition" class="form-label">Descrizione</label>
            <textarea asp-for="Pizza.Descrition" rows="5" class="form-control"></textarea>
            <span asp-validation-for="Pizza.Descrition" class="text-danger"></span>
        </div>
        <div class="mb-4">
            <select asp-for="Pizza.CategoryId" class="form-select">

                @foreach (Category category in Model.Categories)
                {
                    @if (Model.Pizza.CategoryId == category.Id)
                    {
                        <option value="@category.Id" selected>@category.Name</option>
                    }
                    else
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="Pizza.CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3 d-flex flex-row-reverse gap-2">
            <button type="submit" class="btn btn-primary">Invia</button>
            <a type="submit" asp-controller="Home" asp-action="Menu" class="btn btn-danger">Annulla</a>
        </div>
    </form>
</div>

